<% content_for :head do %>
<style>
  .hidden { display: none !important; }
</style>
<% end %>

<div class="bg-gradient-to-br from-amazon to-amazon-dark text-white p-5 text-center shadow-md">
  <h1 class="text-2xl font-bold mb-1">Amazon Affiliated Videos</h1>
  <p class="text-sm opacity-90">Your saved YouTube videos with Amazon product links</p>
</div>

<!-- Login Section -->
<div id="login-section" class="hidden max-w-md mx-auto mt-15 bg-white rounded-xl p-8 shadow-lg">
  <h2 class="text-center mb-5 text-gray-800 text-xl font-semibold">Login</h2>
  <div id="error-message" class="hidden bg-red-50 text-red-600 p-3 rounded-md mb-4 text-sm"></div>
  <form id="login-form">
    <div class="mb-4">
      <label for="email" class="block mb-1 text-gray-600 text-sm">Email</label>
      <input type="email" id="email" required placeholder="your@email.com"
             class="w-full p-3 border border-gray-300 rounded-md text-sm focus:outline-none focus:border-amazon">
    </div>
    <div class="mb-4">
      <label for="password" class="block mb-1 text-gray-600 text-sm">Password</label>
      <input type="password" id="password" required placeholder="Your password"
             class="w-full p-3 border border-gray-300 rounded-md text-sm focus:outline-none focus:border-amazon">
    </div>
    <button type="submit" id="login-btn"
            class="w-full p-3 bg-amazon text-white border-none rounded-md text-base font-semibold cursor-pointer transition-colors hover:bg-amazon-dark disabled:bg-gray-300 disabled:cursor-not-allowed">
      Login
    </button>
  </form>
</div>

<!-- Videos Section -->
<div id="videos-section" class="hidden max-w-4xl mx-auto p-5">
  <div class="flex justify-between items-center bg-white p-4 rounded-lg mb-5 shadow-sm">
    <span class="text-gray-600">Logged in as <strong id="user-email" class="text-gray-800"></strong></span>
    <button id="logout-btn" class="bg-transparent border border-gray-300 px-4 py-2 rounded-md cursor-pointer text-sm hover:bg-gray-100">
      Logout
    </button>
  </div>

  <div id="loading" class="text-center py-10 text-gray-500">
    <div class="spinner mx-auto mb-4"></div>
    <p>Loading your videos...</p>
  </div>

  <div id="videos-grid" class="grid gap-5"></div>

  <div id="empty-state" class="hidden text-center py-15 text-gray-500">
    <h3 class="text-xl mb-2 text-gray-600 font-semibold">No videos yet</h3>
    <p>Videos with Amazon links that you save from the extension will appear here.</p>
  </div>
</div>

<script>
  const API_BASE = window.location.origin;
  let authToken = localStorage.getItem('authToken');
  let userEmail = localStorage.getItem('userEmail');

  const loginSection = document.getElementById('login-section');
  const videosSection = document.getElementById('videos-section');
  const loginForm = document.getElementById('login-form');
  const errorMessage = document.getElementById('error-message');
  const userEmailEl = document.getElementById('user-email');
  const logoutBtn = document.getElementById('logout-btn');
  const loadingEl = document.getElementById('loading');
  const videosGrid = document.getElementById('videos-grid');
  const emptyState = document.getElementById('empty-state');

  if (authToken) {
    showVideosSection();
    loadVideos();
  } else {
    showLoginSection();
  }

  loginForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    const email = document.getElementById('email').value;
    const password = document.getElementById('password').value;
    const loginBtn = document.getElementById('login-btn');

    loginBtn.disabled = true;
    loginBtn.textContent = 'Logging in...';
    errorMessage.classList.add('hidden');

    try {
      const response = await fetch(`${API_BASE}/session`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email_address: email, password })
      });

      const data = await response.json();

      if (response.ok) {
        authToken = data.token;
        userEmail = data.email;
        localStorage.setItem('authToken', authToken);
        localStorage.setItem('userEmail', userEmail);
        showVideosSection();
        loadVideos();
      } else {
        errorMessage.textContent = data.error || 'Login failed';
        errorMessage.classList.remove('hidden');
      }
    } catch (error) {
      errorMessage.textContent = 'Network error. Please try again.';
      errorMessage.classList.remove('hidden');
    } finally {
      loginBtn.disabled = false;
      loginBtn.textContent = 'Login';
    }
  });

  logoutBtn.addEventListener('click', () => {
    localStorage.removeItem('authToken');
    localStorage.removeItem('userEmail');
    authToken = null;
    userEmail = null;
    showLoginSection();
  });

  function showLoginSection() {
    loginSection.classList.remove('hidden');
    videosSection.classList.add('hidden');
  }

  function showVideosSection() {
    loginSection.classList.add('hidden');
    videosSection.classList.remove('hidden');
    userEmailEl.textContent = userEmail || 'User';
  }

  async function loadVideos() {
    loadingEl.classList.remove('hidden');
    videosGrid.innerHTML = '';
    emptyState.classList.add('hidden');

    try {
      const response = await fetch(`${API_BASE}/summaries`, {
        headers: { 'Authorization': `Bearer ${authToken}` }
      });

      if (response.status === 401) {
        localStorage.removeItem('authToken');
        localStorage.removeItem('userEmail');
        showLoginSection();
        return;
      }

      const summaries = await response.json();
      const videosWithLinks = summaries.filter(s => s.amazon_links && s.amazon_links.length > 0);

      loadingEl.classList.add('hidden');

      if (videosWithLinks.length === 0) {
        emptyState.classList.remove('hidden');
        return;
      }

      videosWithLinks.forEach(video => {
        videosGrid.appendChild(createVideoCard(video));
      });

    } catch (error) {
      loadingEl.classList.add('hidden');
      videosGrid.innerHTML = '<p class="text-center text-red-600">Failed to load videos.</p>';
    }
  }

  function createVideoCard(video) {
    const card = document.createElement('div');
    card.className = 'bg-white rounded-xl overflow-hidden shadow-md transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg';

    const date = new Date(video.created_at).toLocaleDateString('en-US', {
      year: 'numeric', month: 'short', day: 'numeric'
    });

    const linksHtml = video.amazon_links.map((link, index) => `
      <a href="${link.url}" target="_blank" rel="noopener noreferrer"
         class="flex items-center gap-3 p-3 bg-white border border-amazon-border rounded-md mb-2 no-underline text-gray-800 transition-all hover:bg-amazon-light hover:border-amazon last:mb-0">
        <span class="w-6 h-6 bg-amazon text-white rounded-full flex items-center justify-center text-xs font-semibold shrink-0">${index + 1}</span>
        <span class="flex-1 text-sm text-gray-600 overflow-hidden text-ellipsis whitespace-nowrap">${truncateUrl(link.url)}</span>
        <svg class="text-gray-400 shrink-0" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14,3V5H17.59L7.76,14.83L9.17,16.24L19,6.41V10H21V3M19,19H5V5H12V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V12H19V19Z"/>
        </svg>
      </a>
    `).join('');

    const thumbnailUrl = `https://img.youtube.com/vi/${video.video_id}/mqdefault.jpg`;

    card.innerHTML = `
      <div class="flex gap-4 p-4 border-b border-gray-200">
        <a href="${video.video_url}" target="_blank" class="shrink-0 w-40 h-[90px] rounded-lg overflow-hidden bg-gray-200">
          <img src="${thumbnailUrl}" alt="Video thumbnail" loading="lazy" class="w-full h-full object-cover">
        </a>
        <div class="flex-1 min-w-0">
          <div class="text-base font-semibold text-gray-800 mb-2 leading-tight">
            <a href="${video.video_url}" target="_blank" class="text-inherit no-underline hover:text-amazon">${escapeHtml(video.video_title || 'Untitled Video')}</a>
          </div>
          <div class="text-xs text-gray-500">Saved on ${date} &bull; ${video.amazon_links.length} Amazon link${video.amazon_links.length !== 1 ? 's' : ''}</div>
        </div>
      </div>
      <div class="p-4 bg-amazon-bg">
        <div class="text-sm font-semibold text-amazon mb-3 flex items-center gap-1.5"><span>&#128722;</span> Amazon Links</div>
        ${linksHtml}
      </div>
    `;

    return card;
  }

  function truncateUrl(url) {
    try {
      const urlObj = new URL(url);
      if (urlObj.hostname === 'amzn.to') return url.replace(/^https?:\/\//, '');
      const dpMatch = urlObj.pathname.match(/\/dp\/([A-Z0-9]+)/i);
      if (dpMatch) return `amazon.../${dpMatch[1]}`;
      const gpMatch = urlObj.pathname.match(/\/gp\/product\/([A-Z0-9]+)/i);
      if (gpMatch) return `amazon.../${gpMatch[1]}`;
      const display = url.replace(/^https?:\/\/(www\.)?/, '');
      return display.length > 50 ? display.substring(0, 47) + '...' : display;
    } catch { return url.length > 50 ? url.substring(0, 47) + '...' : url; }
  }

  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
</script>
